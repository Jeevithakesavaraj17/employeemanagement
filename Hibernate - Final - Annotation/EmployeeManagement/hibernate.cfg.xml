<?xml version = "1.0" encoding = "utf-8"?>
<!DOCTYPE hibernate-configuration SYSTEM 
"http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">

<hibernate-configuration>
    <session-factory>
        <property name = "hibernate.dialect">
            org.hibernate.dialect.MySQL8Dialect
        </property>
      
        <property name = "hibernate.connection.driver_class">
            com.mysql.cj.jdbc.Driver
        </property>
      
        <!-- employeemanagementsystem is the database name -->
      
        <property name = "hibernate.connection.url">
            jdbc:mysql://localhost:3306/employee_management
        </property>
      
        <property name = "hibernate.connection.username">
            root
        </property>
      
        <property name = "hibernate.hbm2ddl.auto">update</property>
        <property name = "show_sql">true</property>

        <!-- List of XML mapping files -->
        <mapping class = "com.employeemanagement.model.Department"/>
        <mapping class= "com.employeemanagement.model.Employee"/>
        <mapping class = "com.employeemanagement.model.Project"/>
        <mapping class = "com.employeemanagement.model.SalaryAccount"/>
    </session-factory>
</hibernate-configuration>